<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="../css/register.css"> <!-- se modifica añadiendo ../ -->
    <script src="https://kit.fontawesome.com/d47e928f31.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Open+Sans:ital@1&family=Roboto:ital,wght@0,100;1,100&display=swap"
        rel="stylesheet">
</head>

<body>

    <%- include('./partials/header'); %>

        <div class="banner">
            <img src="/img/banner2.jpg" alt="banner">
            <i class="fa-solid fa-angle-left" id="left"></i>
            <i class="fa-solid fa-angle-right" id="right"></i>
            <div class="dots">
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
            </div>
            <!-- <img src="/img/banner2.jpg" alt="banner"> -->

        </div>

        </header>
        <main>

            <form action="/" method="get">
                <div class="caja-padre">
                    <div class="registrate">
                        <h2>¡Registrate!</h2>
                        <img src="/img/form.svg" alt="undraw-form">
                    </div>

                    <div>
                        <input type="text" name="nombre-apellido" placeholder="Nombre y apellido" id="nombre-apellido"
                            required>
                    </div>

                    <div>
                        <input type="text" name="username" placeholder="Nombre de usuario" required>
                    </div>

                    <div>
                        <input type="email" name="email" placeholder="E-mail" id="email" required>
                    </div>

                    <div>
                        <h4 class="aclaracion">Fecha de nacimiento</h4>
                        <input type="date" name="nacimiento" id="nacimiento" required>
                    </div>

                    <div>
                        <input type="text" name="domicilio" placeholder="Domicilio" required>
                    </div>

                    <div>
                        <h4 class="aclaracion">Foto de usuario</h4>
                        <div class="file-select">
                            <input type="file" name="foto-user" accept=".png, .jpg">
                        </div>

                        <div class="contraseña">
                            <input class="password" type="password" name="password" placeholder="Contraseña" required>
                        </div>

                        <div class="contraseña">
                            <input class="password" type="password" name="re-password"
                                placeholder="Confirmar contraseña" required>
                        </div>

                        <div>
                            <button class="enviar" type="submit">Enviar</button>
                        </div>
                        <div class="borrar-datos">
                            <button class="borrar" type="reset">Borrar datos</button>
                        </div>

                        <div class="ingreso">
                            <h5 class="google">Ingresar con Google
                                <i class="fab fa-google"></i>
                            </h5>
                            <h5 class="facebook">Ingresar con Facebook
                                <i class="fab fa-facebook-square"></i>
                            </h5>
                        </div>
                    </div>

            </form>
            <%- include('./partials/whatsapp'); %>
        </main>
        <%- include('./partials/footer'); %>
</body>

</html>