        <section class="route-container">
            <h2 class="route-text">NOTEBOOK HP 245 G8 RYZEN 5 5500U 8GB 1TB 14 FREE</h2>
        </section>
        <section class="main-container">
            <div class="images">
                <div class="main-image">
